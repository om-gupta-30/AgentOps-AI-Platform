# AgentOps AI Platform - Environment Variables
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# ============================================================================
# LLM Configuration (Required)
# ============================================================================

# Google Gemini API Key (get from https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=your-google-api-key-here

# Model Configuration
GEMINI_MODEL=gemini-2.5-flash

# ============================================================================
# Observability (Optional but Recommended)
# ============================================================================

# LangSmith (for LangChain tracing)
# Get your key at: https://smith.langchain.com/settings
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=your-project-name
LANGCHAIN_TRACING_V2=true

# For EU region, use: https://eu.api.smith.langchain.com

# Langfuse (for LLM observability)
# Get your keys at: https://cloud.langfuse.com/
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_HOST=https://cloud.langfuse.com

# Note: cloud.langfuse.com serves both US and EU (Ireland) regions

# Enable observability (set to 1 to send traces)
OBSERVABILITY_ENABLED=1

# ============================================================================
# Application Configuration
# ============================================================================

# Offline mode for testing (set to "1" to skip LLM calls)
OFFLINE_MODE=0
